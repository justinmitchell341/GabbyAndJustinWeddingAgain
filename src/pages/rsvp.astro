<form id="rsvpForm">
  <div>
      <label for="name">Name: </label>
      <input type="text" id="name" name="name" required>
  </div>
  <div>
      <label for="guests">Number of Guests: </label>
      <input type="number" id="guests" name="guests" required> <!-- Changed from "numberOfGuests" -->
  </div>
  <div>
      <label for="email">Email: </label>
      <input type="email" id="email" name="email" required>
  </div>
  <div>
      <label for="phoneNumber">Phone Number: </label>
      <input type="tel" id="phoneNumber" name="phoneNumber" required>
  </div>
  <div>
      <ul>
          <li>
              <input type="radio" id="accepts" name="response" value="Joyfully Accepts" required>
              <label for="accepts">Joyfully Accepts</label>
          </li>
          <li>
              <input type="radio" id="declines" name="response" value="Regretfully Declines" required>
              <label for="declines">Regretfully Declines</label>
          </li>
      </ul>
  </div>
  <button type="submit">Submit</button>
</form>

<script>
const form = document.getElementById('rsvpForm')!;
form.onsubmit = async (e) => {
  e.preventDefault();
  const formData = new FormData(form as HTMLFormElement);
  const data = Object.fromEntries(formData);
  // Convert "guests" from string to number as it is a number in DB schema
  data.guests = String(data.guests);
  const response = await fetch('/api/rsvp', {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json'
    },
    body: JSON.stringify(data)
  });

  if (response.ok) {
    console.log('RSVP submitted successfully');
  } else {
    console.error('Failed to submit RSVP', await response.json());
  }
};
</script>
